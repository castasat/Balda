<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/wordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="@dimen/scoreItemMarginSide"
        android:textColor="@color/colorScoreText"
        android:textSize="@dimen/score_item_font_size"
        android:textStyle="bold"
        tools:text="Word" />

    <TextView
        android:id="@+id/wordScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/scoreItemMarginSide"
        android:textSize="@dimen/score_item_font_size"
        android:textStyle="bold"
        tools:text="WordScore" />

</FrameLayout>