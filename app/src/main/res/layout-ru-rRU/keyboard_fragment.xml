<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="TooManyViews">

    <!-- Набор вертикальных гайдлайнов делит экран на 8 вертикальных полос -->

    <!-- Вертикальный guideline с относительным отступом 12.5% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_12v5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.125"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Вертикальный guideline с относительным отступом 25% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_25v"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Вертикальный guideline с относительным отступом 37.5% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_37v5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.375"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Вертикальный guideline с относительным отступом 50% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_50v"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Вертикальный guideline с относительным отступом 62.5% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_62v5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.625"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Вертикальный guideline с относительным отступом 75% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_75v"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Вертикальный guideline с относительным отступом 87.5% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_87v5"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.875"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <!-- Набор горизонтальных гайдлайнов делит экран на 5 горизонтальных полос -->

    <!-- Горизонтальный guideline с относительным отступом 20% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_20h"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Горизонтальный guideline с относительным отступом 40% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_40h"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Горизонтальный guideline с относительным отступом 60% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_60h"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Горизонтальный guideline с относительным отступом 80% -->
    <android.support.constraint.Guideline
        android:id="@+id/line_80h"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <!-- Кнопки, привязанные к гайдлайнам -->

