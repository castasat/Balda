<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Holo android:color colors -->
    <color name="blueBright">@android:color/holo_blue_bright</color>
    <color name="blueDark">@android:color/holo_blue_dark</color>
    <color name="blueLight">@android:color/holo_blue_light</color>
    <color name="greenDark">@android:color/holo_green_dark</color>
    <color name="greenLight">@android:color/holo_green_light</color>
    <color name="orangeDark">@android:color/holo_orange_dark</color>
    <color name="orangeLight">@android:color/holo_orange_light</color>
    <color name="purple">@android:color/holo_purple</color>
    <color name="redDark">@android:color/holo_red_dark</color>
    <color name="redLight">@android:color/holo_red_light</color>
    <color name="black">@android:color/black</color>
    <color name="white">@android:color/white</color>
  <!-- / Holo android:color colors -->


  <!-- App Theme colors -->
    <color name="colorPrimary">@android:color/holo_green_light</color>
    <color name="colorPrimaryDark">@android:color/holo_green_dark</color>
    <color name="colorAccent">@android:color/holo_red_dark</color>
  <!-- / App Theme colors -->

  <!-- Score colors -->
    <color name="colorPlayerScore">@android:color/holo_green_dark</color>
    <color name="colorOpponentScore">@android:color/holo_red_dark</color>
    <color name="colorScoreText">@color/black</color>
  <!-- / Score colors -->

  <!-- Cell colors -->
    <!-- normal -->
    <color name="colorBackgroundCellNormal">@android:color/white</color>
    <color name="colorTextCellNormal">@android:color/black</color>
    <color name="colorStrokeCellNormal">@android:color/black</color> 
    <!-- / normal --> 
    
    <!-- pressed -->
    <color name="colorBackgroundCellPressed">@android:color/holo_blue_dark</color>
    <color name="colorTextCellPressed">@android:color/black</color>
    <color name="colorStrokeCellPressed">@android:color/white</color>
    <!-- / pressed -->

    <!-- selected -->
    <color name="colorBackgroundCellSelected">@android:color/holo_blue_light</color>
    <color name="colorTextCellSelected">@android:color/white</color>
    <color name="colorStrokeCellSelected">@android:color/holo_green_dark</color>
    <!-- / selected -->
  <!-- / Cell colors -->


  <!-- Key colors -->
    <!-- normal -->
    <color name="colorBackgroundKeyNormal">@android:color/black</color>
    <color name="colorTextKeyNormal">@android:color/white</color>
    <color name="colorStrokeKeyNormal">@android:color/white</color>
    <!-- / normal -->

    <!-- pressed -->
    <color name="colorBackgroundKeyPressed">@android:color/white</color>
    <color name="colorTextKeyPressed">@android:color/black</color>
    <color name="colorStrokeKeyPressed">@android:color/black</color>
    <!-- / pressed-->
  <!-- / Key colors -->

</resources>
