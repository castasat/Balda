<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Balda" parent="AppTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="SquareButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment" tools:targetApi="17">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:digits">@string/allowed_characters</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/background_cell_selector</item>
        <item name="android:textColor">@drawable/text_cell_color_selector</item>
        <item name="layout_constraintDimensionRatio">=1:1</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="DarkButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/background_key_normal</item>
        <item name="android:textColor">@color/colorTextKeyNormal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="17">center</item>
        <item name="android:textSize">@dimen/keyboard_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="KeyboardButton" parent="DarkButton">
        <item name="android:digits">@string/allowed_characters</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="ScoreHeader" parent="AppTheme">
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/score_header_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerScoreHeader" parent="ScoreHeader">
        <item name="android:textColor">@color/colorPlayerScore</item>
    </style>

    <style name="OpponentScoreHeader" parent="ScoreHeader">
        <item name="android:textColor">@color/colorOpponentScore</item>
    </style>

</resources>
